{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@faded-chapter/admin": ["libs/admin/admin/src/index.ts"],
      "@faded-chapter/auth": ["libs/auth/src/index.ts"],
      "@faded-chapter/feedback": ["libs/feedback/src/index.ts"],
      "@faded-chapter/pages": ["libs/pages/src/index.ts"],
      "@faded-chapter/shared": ["libs/shared/src/index.ts"],
      "@faded-chapter/ui": ["libs/ui/src/index.ts"],
      "@faded-chapter/user-dashboard": ["libs/user-dashboard/src/index.ts"],
      "@faded-chapter/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
